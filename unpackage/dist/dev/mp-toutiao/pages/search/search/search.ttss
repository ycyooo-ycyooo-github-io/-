page {
  background-color: #F5F5F5;
}
.status {
  width: 100%;
  height: 0;
  position: fixed;
  z-index: 10;
  background-color: #fff;
  top: 0;
}
.place {
  background-color: #ffffff;
  height: 100rpx;
}
.header {
  width: 100%;
  padding: 15rpx 4% 15rpx;
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #fff;
}
.header .input-box {
    width: 70%;
    height: 60rpx;
    background-color: #f5f5f5;
    border-radius: 30rpx;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    margin-right: 20rpx;
}
.header .input-box .icon {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      position: absolute;
      top: 0;
      right: 0;
      width: 60rpx;
      height: 60rpx;
      font-size: 34rpx;
      color: #c0c0c0;
}
.header .input-box input {
      padding-left: 28rpx;
      height: 28rpx;
      font-size: 28rpx;
}
.header .btn {
    width: 140rpx;
}
.header .btn button {
      font-size: 28rpx;
      border: 0;
      border-radius: 50rpx !important;
}
.header .btn button::after {
      border: none !important;
}
.header .active button {
    background-color: red;
    color: white;
}
.history,
.hot {
  padding: 4%;
  position: relative;
  background-color: white;
  font-size: 28rpx;
}
.history .title,
  .hot .title {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.history .title .icon-btn .icon,
    .hot .title .icon-btn .icon {
      font-size: 32rpx !important;
      font-weight: 400;
}
.history .content,
  .hot .content {
    padding-top: 10rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: left;
    -webkit-justify-content: left;
            justify-content: left;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.history .content .keywords,
    .hot .content .keywords {
      margin-right: 20rpx;
      margin-bottom: 20rpx;
      text-align: center;
      padding: 15rpx 20rpx;
      background-color: #F6F6F6;
      border-radius: 30rpx;
}
.hot {
  padding-top: 20rpx !important;
}

