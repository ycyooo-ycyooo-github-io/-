    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-top: 1px solid #EEEEEE;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.tabBar .tabBar-list .tabBar-item {
