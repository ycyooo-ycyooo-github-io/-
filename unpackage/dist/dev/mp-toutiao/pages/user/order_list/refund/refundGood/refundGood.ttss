.goods-info {
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 92%;
  padding: 20rpx 3%;
  margin: 20rpx auto 20rpx auto;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.goods-info .img {
    width: 22vw;
    height: 22vw;
    border-radius: 10rpx;
    overflow: hidden;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    margin-right: 10rpx;
}
.goods-info .img image {
      width: 22vw;
      height: 22vw;
}
.goods-info .info {
    width: 100%;
    height: 22vw;
    overflow: hidden;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    position: relative;
}
.goods-info .info .title {
      width: 100%;
      font-size: 28rpx;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
}
.goods-info .info .spec {
      font-size: 22rpx;
      background-color: #f3f3f3;
      color: #a7a7a7;
      height: 40rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding: 0 10rpx;
      border-radius: 20rpx;
      margin-bottom: 20vw;
}
.goods-info .info .price-number {
      position: absolute;
      width: 100%;
      bottom: 0rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: end;
      -webkit-align-items: flex-end;
              align-items: flex-end;
      font-size: 28rpx;
      height: 40rpx;
}
.goods-info .info .price-number .price {
        color: #f06c7a;
}
.info-box {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.info-box .row {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    border-bottom: 1px solid #EEEEEE;
    padding: 30rpx;
}
.info-box .row .text {
      font-size: 26rpx;
      margin-right: 20rpx;
}
.info-box .row .desc {
      font-size: 20rpx;
      color: #B2B2B2;
      padding: 20rpx 0;
}
.info-box .row .arrow {
      position: absolute;
      right: 4%;
      font-size: 24rpx;
}
.info-box .row .arrow .icon {
        color: #6C6C6C;
}
.refundMoney {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.refundMoney .text {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: left;
    -webkit-justify-content: left;
            justify-content: left;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 26rpx;
}
.refundMoney .desc {
    padding: 20rpx 0;
    color: #B2B2B2;
    font-size: 22rpx;
}
.upload {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
}
.upload .text {
    font-size: 26rpx;
}
.upload .tui-box-upload {
    margin-top: 20rpx;
}
.submit {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.submit button {
    border-radius: 0 !important;
}
.popup {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 20;
  display: none;
}
.popup .mask {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 21;
    background-color: rgba(0, 0, 0, 0.6);
}
.popup .layer {
    position: fixed;
    z-index: 22;
    bottom: 0;
    width: 92%;
    padding: 0 4%;
    height: 60%;
    border-radius: 20rpx 20rpx 0 0;
    background-color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-align-content: space-between;
            align-content: space-between;
}
.popup .layer .content {
      width: 100%;
      padding: 20rpx 0;
}
.popup .layer .content .title {
        text-align: center;
        font-size: 30rpx;
        padding: 15rpx 0;
}
.popup .layer .content .uni-list-cell {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
                justify-content: space-between;
        padding: 20rpx 10rpx;
        border-bottom: 1px solid #EEEEEE;
}
.popup .layer .btn {
      width: 100%;
      height: 100rpx;
}
.popup .layer .btn .button {
        width: 100%;
        height: 80rpx;
        border-radius: 40rpx;
        color: #fff;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        background-color: #f47952;
        font-size: 28rpx;
}
.popup.show {
    display: block;
}
.popup.show .mask {
      -webkit-animation: showPopup 0.2s linear both;
              animation: showPopup 0.2s linear both;
}
.popup.show .layer {
      -webkit-animation: showLayer 0.2s linear both;
              animation: showLayer 0.2s linear both;
}
.popup.hide {
    display: block;
}
.popup.hide .mask {
      -webkit-animation: hidePopup 0.2s linear both;
              animation: hidePopup 0.2s linear both;
}
.popup.hide .layer {
      -webkit-animation: hideLayer 0.2s linear both;
              animation: hideLayer 0.2s linear both;
}
.popup.none {
    display: none;
}

