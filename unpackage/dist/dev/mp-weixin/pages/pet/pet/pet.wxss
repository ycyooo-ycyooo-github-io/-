.part-one {
  width: 100%;
}
.part-one image {
    width: 100%;
    height: 330rpx;
}
.part-one .content {
    width: 100%;
    text-align: center;
    padding: 50rpx 0;
}
.part-one .content ._h1 {
      font-size: 72rpx;
      color: #e8b50a;
      padding-bottom: 10rpx;
}
.part-one .content ._p {
      font-size: 24rpx;
      line-height: 48rpx;
}
.part-one .content ._p text {
        color: #ecb81d;
}
.part-one .productList {
    width: 100%;
    background-color: #ffe3f0;
}
.part-one .productList .product {
      margin-bottom: 20rpx;
      position: relative;
      height: 559rpx;
}
.part-one .productList .product image {
        width: 100%;
        height: 559rpx;
}
.part-one .productList .product .good-info {
        width: 370rpx;
        top: 23%;
        position: absolute;
        padding-left: 50rpx;
}
.part-one .productList .product .good-info .title {
          font-size: 40rpx;
          font-weight: 550;
          line-height: 48px;
          color: #000000;
}
.part-one .productList .product .good-info .details {
          width: 100%;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-flex-wrap: wrap;
                  flex-wrap: wrap;
          -webkit-box-align: center;
          -webkit-align-items: center;
                  align-items: center;
          padding-bottom: 100rpx;
}
.part-one .productList .product .good-info .details text {
            width: 50%;
            font-size: 24rpx;
            line-height: 40rpx;
}
.part-one .productList .product .good-info .price-buy {
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-align: center;
          -webkit-align-items: center;
                  align-items: center;
          -webkit-box-pack: left;
          -webkit-justify-content: left;
                  justify-content: left;
}
.part-one .productList .product .good-info .price-buy .price {
            font-size: 36rpx;
            color: #1e43bc;
            margin-right: 25rpx;
}
.part-one .productList .product .good-info .price-buy .buy {
            width: 78rpx;
            height: 78rpx;
            line-height: 78rpx;
            background-color: #1e43bc;
            border-radius: 20rpx;
            color: #FFFFFF;
            text-align: center;
            font-size: 25rpx;
}
.part-one .productList .product .good-info .price-buy .buy text {
              display: block;
