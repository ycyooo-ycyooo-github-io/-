.status {
  width: 100%;
  height: 0;
  z-index: 10;
  top: 0;
}
.header {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
