.goods {
  padding: 20rpx;
}
.goods .goods-item {
    height: 320rpx;
    margin: 30rpx 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.goods .goods-item .left {
      height: 280rpx;
      width: 40%;
}
.goods .goods-item .right {
      width: 55%;
      padding-left: 20rpx;
}
.goods .goods-item .right .info {
        height: 70%;
}
.goods .goods-item .right .info .name {
          font-size: 35rpx;
}
.goods .goods-item .right .info .dis {
          color: #999999;
          margin: 10rpx 0;
}
.goods .goods-item .right .info .tip text {
          background: #fbf2f0;
          color: #c03d38;
          margin-right: 10rpx;
          text-align: center;
          font-size: 26rpx;
          padding: 5rpx 8rpx;
}
.goods .goods-item .right .bottom {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
                justify-content: space-between;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.goods .goods-item .right .bottom .price {
          color: #c03d38;
          font-size: 28rpx;
}
.goods .goods-item .right .bottom .price .num {
            font-size: 45rpx;
}
.goods .goods-item .right .bottom .btn {
          background-color: #c03d38;
          color: #FFFFFF;
          width: 120rpx;
          height: 60rpx;
          line-height: 60rpx;
          text-align: center;
}
.goods .goods-item image {
      width: 100%;
      height: 100%;
}
