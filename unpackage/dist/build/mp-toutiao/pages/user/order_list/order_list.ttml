<view><view class="topTabBar" style="{{'position:'+(headerPosition)+';'+('top:'+(headerTop)+';')}}"><scroll-view class="tab-view" scroll-x scroll-with-animation scroll-left="{{scrollLeft}}"><block tt:for="{{orderType}}" tt:for-item="grid" tt:for-index="tbIndex" tt:key="tbIndex"><view data-event-opts="{{[['tap',[['showType',['$0'],[[['orderType','',tbIndex,'sort']]]]]]]}}" class="tab-bar-item" bindtap="__e"><text class="{{(('text')+' '+(grid.sort==tabbarIndex?'on':''))}}">{{grid.name}}</text></view></block></scroll-view></view><view class="order-list"><view class="list"><block tt:if="{{list.length==0}}"><view class="onorder"><image src="../../../static/img/noorder.png"></image><view class="text">没有相关订单</view></view></block><block tt:for="{{list}}" tt:for-item="row" tt:for-index="index" tt:key="index"><view class="row"><view><view class="type">{{"订单号："+row.order_sn+"("+row.tips+')'}}<view data-event-opts="{{[['tap',[['del',['$0'],[[['list','',index]]]]]]]}}" class="icon shanchu" bindtap="__e"></view></view><view data-event-opts="{{[['tap',[['toOrderDtl',['$0'],[[['list','',index,'order_sn']]]]]]]}}" class="order-info" bindtap="__e"><scroll-view class="scroll-view" scroll-x="true" scroll-left="{{listscrollLeft}}" data-event-opts="{{[['bindscroll',[['scroll',['$event']]]]]}}" bindbindscroll="__e"><view class="left"><block tt:for="{{row.pro}}" tt:for-item="item" tt:for-index="i" tt:key="i"><view class="imgList"><image src="{{item.pro_img}}"></image></view></block></view></scroll-view></view><view class="detail"><view class="number">{{"共"+row.pro.length+"件商品"}}</view><view class="sum">合计￥<view class="price">{{row.amtprice}}</view></view><view class="nominal">{{"(含运费 ￥"+row.order_ship_price+")"}}</view></view></view><view class="btns"><block tt:if="{{row.order_state=='0'||row.order_state=='1'}}"><block><view data-event-opts="{{[['tap',[['edit',['$0'],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">修改地址</view></block></block><block tt:if="{{row.order_state=='1'||row.order_state=='2'}}"><block><view data-event-opts="{{[['tap',[['modalShow',['$0'],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">申请退款</view></block></block><block tt:if="{{row.order_state=='3'||row.order_state=='4'}}"><block><view data-event-opts="{{[['tap',[['showLogistics',['$0'],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">查看物流</view></block></block><block tt:if="{{row.order_state=='0'}}"><block><view data-event-opts="{{[['tap',[['toPayment',['$0'],[[['list','',index]]]]]]]}}" class="pay" bindtap="__e">付款</view></block></block><block tt:if="{{row.order_state=='3'||row.order_state=='4'}}"><block><view data-event-opts="{{[['tap',[['toOrderDtl',['$0'],[[['list','',index,'order_sn']]]]]]]}}" class="default" bindtap="__e">我要退货</view></block></block><block tt:if="{{row.order_state=='3'}}"><block><view data-event-opts="{{[['tap',[['toConfirm',['$0'],[[['list','',index,'order_sn']]]]]]]}}" class="pay" bindtap="__e">确认收货</view></block></block><block tt:if="{{row.order_state=='4'||row.order_state=='8'}}"><block><view data-event-opts="{{[['tap',[['buyAgain',['$0'],[[['list','',index]]]]]]]}}" class="pay" bindtap="__e">再次购买</view></block></block></view></view></block><block tt:if="{{list.length>0}}"><view class="loading-text">{{loadingText}}</view></block></view></view><tui-modal vue-id="1" show="{{txtmodal}}" custom="{{true}}" fadein="{{true}}" data-event-opts="{{[['^cancel',[['e0']]]]}}" bind:cancel="__e" bind:__l="__l" vue-slots="{{['default']}}"><view class="tui-modal-custom"><view class="tui-prompt-title">退款原因</view><input class="tui-input" placeholder="请输入退款原因" data-event-opts="{{[['input',[['__set_model',['','txt','$event',[]]]]]]}}" value="{{txt}}" bindinput="__e"/><button shape="circle" size="small" type="warn" data-event-opts="{{[['tap',[['refund',['$event']]]]]}}" bindtap="__e">立即提交</button></view></tui-modal><tui-scroll-top vue-id="2" scrollTop="{{top}}" bind:__l="__l"></tui-scroll-top></view>